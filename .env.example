# AWS Access Grants Configuration Example
# Copy this file to .env and fill in your actual values

# ===========================================
# Azure AD Configuration (REQUIRED)
# ===========================================
# Your Azure AD tenant ID (found in Azure Portal > Azure Active Directory > Properties)
AZURE_TENANT_ID=your-azure-tenant-id

# Azure AD application (client) ID for the service principal
AZURE_CLIENT_ID=your-azure-client-id

# Azure AD application client secret
AZURE_CLIENT_SECRET=your-azure-client-secret

# Enterprise Application ID for AWS IAM Identity Center in Azure AD
AZURE_ENTERPRISE_APP_ID=your-enterprise-app-id

# ===========================================
# AWS Configuration (REQUIRED)
# ===========================================
# AWS region where your Identity Center is deployed
AWS_REGION=us-east-1

# AWS profile name from ~/.aws/credentials (optional, defaults to 'default')
# This allows you to use existing AWS CLI profiles instead of hardcoding credentials
AWS_PROFILE=default

# AWS IAM Identity Center instance ARN
# Format: arn:aws:sso:::instance/ssoins-xxxxxxxxxxxxxxxxx
AWS_IDENTITY_CENTER_INSTANCE_ARN=arn:aws:sso:::instance/ssoins-xxxxxxxxxx

# AWS Identity Store ID
# Format: d-xxxxxxxxxx
AWS_IDENTITY_STORE_ID=d-xxxxxxxxxx

# ===========================================
# AWS Account Mapping (REQUIRED)
# ===========================================
# Map account types to actual AWS account IDs
AWS_ACCOUNT_DEV=123456789012
AWS_ACCOUNT_QA=123456789013
AWS_ACCOUNT_STAGING=123456789014
AWS_ACCOUNT_PROD=123456789015

# ===========================================
# Optional Configuration
# ===========================================
# Logging
LOG_LEVEL=info
LOG_FILE=aws-ag.log
LOG_CONSOLE=true

# Retry Configuration
RETRY_MAX_ATTEMPTS=3
RETRY_BASE_DELAY_MS=1000
RETRY_MAX_DELAY_MS=30000
RETRY_EXPONENTIAL_BACKOFF=true

# Templates
PERMISSION_SET_TEMPLATES_PATH=./templates
DEFAULT_SESSION_DURATION=PT1H
